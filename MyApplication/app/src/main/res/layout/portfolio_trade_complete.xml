<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="wrap_content" android:layout_width="372dp"
    android:background="@drawable/tradedialog_roundedcorners" android:layout_gravity="center_horizontal" android:orientation="vertical"
    android:paddingStart="25dp"
    android:paddingEnd="25dp"
    android:paddingTop="50dp"
    android:paddingBottom="50dp">

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:text="Congratulations!"
        android:textColor="@color/LighterVersionofgray"
        android:textSize="30sp" android:textStyle="bold" />

    <TextView android:id="@+id/trade_complete_message"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal"
        android:textColor="@color/LighterVersionofgray"
        tools:text="You have successfully bought 30 shares of AAPL"
        android:textStyle="italic"  />

    <Button android:id="@+id/done_buttonOfTrade"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textSize="15sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/done_button"
        android:textColor="@color/green"
        android:text="DONE" />

</LinearLayout>
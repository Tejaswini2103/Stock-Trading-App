<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:background="@drawable/news_item_display_corners"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/news_item_display_corners">

        <TextView
            android:id="@+id/news_dialog_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"
            tools:text="Business Insider" />

        <TextView
            android:id="@+id/news_dialog_tv_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/darkgray"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingBottom="25dp"
            android:textStyle="bold"
            tools:text="Business Insider" />

        <View
            android:layout_width="355dp"
            android:layout_height="1dp"
            android:background="@color/darkgray" />

        <TextView
            android:id="@+id/news_dialog_titleactual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp"
            android:textStyle="bold"
            tools:text="Business Insider" />

        <TextView
            android:id="@+id/news_summary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="30dp"
            tools:text="Business Insider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:background="@drawable/news_item_display_corners"
            android:paddingBottom="20dp">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@color/white"

                android:paddingTop="4dp"

                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/news_dialog_b_share"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@mipmap/chromeiconadaptive_round"
                    android:shadowRadius="0"
                    android:elevation="0dp"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:background="@color/white"

                android:paddingTop="4dp"

                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/news_dialog_b_view"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@mipmap/twittericon_round" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.30"
                android:background="@drawable/news_item_display_corners"

                android:paddingTop="4dp"

                android:paddingBottom="4dp">

                <ImageButton
                    android:id="@+id/news_dialog_b_view2"
                    android:layout_width="100px"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:background="@mipmap/facebook_round" />
            </FrameLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
